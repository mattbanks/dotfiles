Include ~/.ssh/config.local
Include ~/.dotfiles-private/ssh/ssh_config.private

# Personal GitHub
Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519
  UseKeychain yes
  AddKeysToAgent yes

# Generic settings for all hosts â€” put this at the bottom
Host *
  AddKeysToAgent yes
  ServerAliveInterval 60
  StrictHostKeyChecking no
  UseKeychain yes
  IdentitiesOnly yes
