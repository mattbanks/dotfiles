#!/bin/bash

# NPM and Packages
curl http://npmjs.org/install.sh | sh
npm install -g coffee-script
npm install -g grunt

# RVM and Gems
bash < <(curl -s https://raw.github.com/wayneeseguin/rvm/master/binscripts/rvm-installer )
rvm install 1.9.3
rvm use 1.9.3 --default
gem update --system
gem install rails
gem install bundler
gem install compass
gem install capistrano