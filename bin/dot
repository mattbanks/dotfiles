#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

# Install fonts
while true; do
    read -p "Install Source Code Pro font?" yn
    case $yn in
        [Yy]* ) $HOME/.dotfiles/fonts/copy; break;;
        [Nn]* ) break;;
        * ) echo "Please answer yes or no.";;
    esac
done

# Set OS X defaults
while true; do
    read -p "Set OSX defaults?" yn
    case $yn in
        [Yy]* ) $HOME/.dotfiles/osx/set-defaults.sh; break;;
        [Nn]* ) break;;
        * ) echo "Please answer yes or no.";;
    esac
done

# Install homebrew packages
while true; do
    read -p "Run laptop setup (brew install with packages, node install, etc?" yn
    case $yn in
        [Yy]* ) zsh <\(curl -s https:\/\/raw.github.com/mattbanks/laptop/master/mac\); break;;
        [Nn]* ) break;;
        * ) echo "Please answer yes or no.";;
    esac
done
